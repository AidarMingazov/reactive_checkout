= simple_form_for :payment, url: '/payments', html: { method: :post } do |f|
  = f.input :card_number, as: :string, label: 'Credit Card Number:', maxlength: 20
  = f.input :card_cvc, as: :string, label: 'CVC:', maxlength: 3
  = f.input :card_expared_month, collection: 1..12, label: 'Expiry Date (mounth):'
  = f.input :card_expared_year, collection: Date.current.year..(Date.current.year + 10), label: 'Expiry Date (year):'
  = f.input :card_holder, as: :string, label: 'Holder name:' 
  = f.input :product_id, as: :hidden, input_html: { value: params[:product_id] }
  br
  = f.submit 'Process Payment'
